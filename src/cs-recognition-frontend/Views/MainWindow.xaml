<Window
    x:Name="root"
    x:Class="Haru.Kei.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:l="http://schemas.livet-mvvm.net/2011/wpf"
    xmlns:ri="clr-namespace:Reactive.Bindings.Interactivity;assembly=ReactiveProperty.WPF"
    xmlns:local="clr-namespace:Haru.Kei.Views"
    xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    mc:Ignorable="d"
    Title="ゆーかねすぴれこランチャー"
    Height="720" Width="820"
    Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <ri:EventToReactiveCommand Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Closing">
            <ri:EventToReactiveCommand Command="{Binding ClosingCommand}" />
        </i:EventTrigger>

        <!-- Confirmationに対応 -->
        <l:InteractionMessageTrigger Messenger="{Binding Messenger}" MessageKey="Confirmation" >
            <l:ConfirmationDialogInteractionMessageAction/>
        </l:InteractionMessageTrigger>
        <!-- Informationに対応 -->
        <l:InteractionMessageTrigger Messenger="{Binding Messenger}" MessageKey="Information" >
            <l:InformationDialogInteractionMessageAction/>
        </l:InteractionMessageTrigger>
        <!-- OpenFileに対応 -->
        <l:InteractionMessageTrigger Messenger="{Binding Messenger}" MessageKey="OpenFile" >
            <l:OpenFileDialogInteractionMessageAction/>
        </l:InteractionMessageTrigger>
        <!-- SaveFileに対応 -->
        <l:InteractionMessageTrigger Messenger="{Binding Messenger}" MessageKey="SaveFile" >
            <l:SaveFileDialogInteractionMessageAction/>
        </l:InteractionMessageTrigger>
    </i:Interaction.Triggers>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="ファイル(_F)">
                <MenuItem Header="バッチファイルを作成" Command="{Binding CreateBatchommand}"/>
                <Separator />
                <MenuItem Header="マイクテスト" Command="{Binding MicTestCommand}"/>
                <MenuItem Header="環境音測定" Command="{Binding AmbientTestCommand}"/>
                <Separator />
                <MenuItem Header="終了(_E)" Command="{Binding CloseCommand}"/>
            </MenuItem>
            <MenuItem Header="プリセット(_P)">
                <MenuItem Header="音声認識にwhisperを使用" Command="{Binding ConnectWhisperCommand}"/>
                <MenuItem Header="音声認識にgoogleを使用"  Command="{Binding ConnectGoogleCommand}"/>
                <Separator />
                <MenuItem Header="ゆかりねっとと連携"  Command="{Binding ConnectYukarinetteCommand}"/>
                <MenuItem Header="ゆかコネNEOと連携"  Command="{Binding ConnectYukaConeCommand}"/>
            </MenuItem>
        </Menu>
        <TabControl Grid.Row="1" Margin="0,8,0,0" FontSize="{DynamicResource YsrFontSize}">
            <TabItem Header="モデル" Padding="16,2,16,2">
                <Border Margin="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="48" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="24" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Column="0" Grid.Row="0"
                            FontSize="{DynamicResource YsrFontSize}"
                            >
                            <Run Text="認識モデル" />
                            <Run
                                Foreground="{DynamicResource YspInfoBrush}"
                                BaselineAlignment="Bottom"
                                FontFamily="{StaticResource SymbolFont}"
                                Text="{StaticResource FontSymbolInfo}"
                                ToolTip="-" />
                        </TextBlock>
                        <ComboBox
                            Grid.Column="3" Grid.Row="0"
                            ItemsSource="{Binding ConfigBinder.TranscribeModelsBinder, Mode=OneWay}"
                            SelectedIndex="{Binding ConfigBinder.TranscribeModeIndex.Value, Mode=TwoWay}"
                            />

                        <TextBlock
                            Grid.Column="0" Grid.Row="2"
                            Visibility="{Binding ConfigBinder.GoogleItemVisibility.Value, Mode=OneWay}"
                            FontSize="{DynamicResource YsrFontSize}"
                            >
                            <Run Text="音声認識言語" />
                            <Run
                                Foreground="{DynamicResource YspInfoBrush}"
                                BaselineAlignment="Bottom"
                                FontFamily="{StaticResource SymbolFont}"
                                Text="{StaticResource FontSymbolInfo}"
                                ToolTip="-" />
                        </TextBlock>
                        <TextBox
                            Grid.Column="3" Grid.Row="2" 
                            Visibility="{Binding ConfigBinder.GoogleItemVisibility.Value, Mode=OneWay}"
                            FontSize="{DynamicResource YsrFontSize}"
                            Text="{Binding ConfigBinder.GoogleLanguageBinding.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            />
                        
                        <TextBlock
                            Grid.Column="0" Grid.Row="4"
                            Visibility="{Binding ConfigBinder.GoogleItemVisibility.Value, Mode=OneWay}"
                            FontSize="{DynamicResource YsrFontSize}"
                            >
                            <Run Text="APIタイムアウト時間[秒]" />
                            <Run
                                Foreground="{DynamicResource YspInfoBrush}"
                                BaselineAlignment="Bottom"
                                FontFamily="{StaticResource SymbolFont}"
                                Text="{StaticResource FontSymbolInfo}"
                                ToolTip="-" />
                        </TextBlock>
                        <TextBlock
                            Grid.Column="2" Grid.Row="4"
                            Margin="4,0,4,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource YspErrorBrush}"
                            FontSize="{DynamicResource YsrFontSize}"
                            FontFamily="{StaticResource SymbolFont}" 
                            Text="{StaticResource FontSymbolStatusErrorFull}"
                            Visibility="{Binding ConfigBinder.GoogleTimeoutError.Value, Mode=OneWay}"
                            />
                        <TextBox
                            Grid.Column="3" Grid.Row="4" 
                            Visibility="{Binding ConfigBinder.GoogleItemVisibility.Value, Mode=OneWay}"
                            FontSize="{DynamicResource YsrFontSize}"
                            Text="{Binding ConfigBinder.GoogleTimeoutBinding.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            />
                        <!--
                        <TextBlock
                            Grid.Column="3" Grid.Row="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="Red"
                            FontFamily="{StaticResource SymbolFont}" 
                            Text="{StaticResource FontSymbolError}"
                            Visibility="{Binding ConfigBinder.MicrophoneThresholdDbError.Value, Mode=OneWay}"
                            />
                        -->

                        <TextBlock
                            Grid.Column="0" Grid.Row="6"
                            Visibility="{Binding ConfigBinder.GoogleItemVisibility.Value, Mode=OneWay}"
                            FontSize="{DynamicResource YsrFontSize}"
                            >
                            <Run Text="冒とくフィルタ" />
                            <Run
                                Foreground="{DynamicResource YspInfoBrush}"
                                BaselineAlignment="Bottom"
                                FontFamily="{StaticResource SymbolFont}"
                                Text="{StaticResource FontSymbolInfo}"
                                ToolTip="-" />
                        </TextBlock>
                        <CheckBox
                            Grid.Column="3" Grid.Row="6" 
                            Visibility="{Binding ConfigBinder.GoogleItemVisibility.Value, Mode=OneWay}"
                            IsChecked="{Binding ConfigBinder.GoogleProfanityFilterBinder.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            FontSize="{DynamicResource YsrFontSize}"
                            Content="使用する"
                            />

                        <TextBlock
                            Grid.Column="0" Grid.Row="9"
                            FontSize="{DynamicResource YsrFontSize}"
                            >
                            <Run Text="翻訳モデル" />
                            <Run
                                Foreground="{DynamicResource YspInfoBrush}"
                                BaselineAlignment="Bottom"
                                FontFamily="{StaticResource SymbolFont}"
                                Text="{StaticResource FontSymbolInfo}"
                                ToolTip="-" />
                        </TextBlock>
                        <ComboBox
                            Grid.Column="3" Grid.Row="8"
                            FontSize="{DynamicResource YsrFontSize}"
                            ItemsSource="{Binding ConfigBinder.TranslateModelsBinder, Mode=OneWay}"
                            SelectedIndex="{Binding ConfigBinder.TranslateModelIndex.Value, Mode=TwoWay}"
                            />
                    </Grid>
                </Border>
            </TabItem>

            <TabItem Header="マイク" Padding="16,2,16,2">
                <Border Margin="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="48" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="12" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="12" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="12" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="12" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Column="0" Grid.Row="0"
                            FontSize="{DynamicResource YsrFontSize}">
                            <Run Text="デバイス" />
                        </TextBlock>
                        <Grid
                            Grid.Column="3" Grid.Row="0"
                            >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="72" />
                            </Grid.ColumnDefinitions>
                            <ComboBox
                                FontSize="{DynamicResource YsrFontSize}"
                                ItemsSource="{Binding ConfigBinder.MicDevicesBinder, Mode=OneWay}"
                                SelectedIndex="{Binding ConfigBinder.MicDeviceIndex.Value, Mode=TwoWay}"
                                />
                            <Button
                                Grid.Column="1"
                                FontSize="{DynamicResource YsrFontSize}"
                                Content="再読み込み"
                                IsEnabled="False"
                                />
                        </Grid>

                        <TextBlock
                            Grid.Column="0" Grid.Row="2"
                            FontSize="{DynamicResource YsrFontSize}">
                            <Run Text="環境音境界値[dB]" />
                            <Run
                                Foreground="{DynamicResource YspInfoBrush}"
                                BaselineAlignment="Bottom"
                                FontFamily="{StaticResource SymbolFont}"
                                Text="{StaticResource FontSymbolInfo}"
                                ToolTip="環境音ではないと判断する音圧の境界値。デフォルトでは0.0が設定されています。お使いのマイクによって感度は異なります" />
                        </TextBlock>
                        <TextBlock
                            Grid.Column="2" Grid.Row="2"
                            Margin="4,0,4,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource YspErrorBrush}"
                            FontSize="{DynamicResource YsrFontSize}"
                            FontFamily="{StaticResource SymbolFont}" 
                            Text="{StaticResource FontSymbolStatusErrorFull}"
                            Visibility="{Binding ConfigBinder.MicrophoneThresholdDbError.Value, Mode=OneWay}"
                            />
                        <TextBox
                            Grid.Column="3" Grid.Row="2"
                            FontSize="{DynamicResource YsrFontSize}"
                            Text="{Binding ConfigBinder.MicrophoneThresholdDbBinder.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            />

                        <TextBlock
                            Grid.Column="0" Grid.Row="4"
                            FontSize="{DynamicResource YsrFontSize}">
                            <Run Text="入力無視秒数[秒]" />
                            <Run
                                Foreground="{DynamicResource YspInfoBrush}"
                                BaselineAlignment="Bottom"
                                FontFamily="{StaticResource SymbolFont}"
                                Text="{StaticResource FontSymbolInfo}"
                                ToolTip="この秒数未満の入力は無視します。デフォルトでは0.0が設定されています。お使いのマイクによって感度は異なります。" />
                        </TextBlock>
                        <TextBlock
                            Grid.Column="2" Grid.Row="4"
                            Margin="4,0,4,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource YspErrorBrush}"
                            FontSize="{DynamicResource YsrFontSize}"
                            FontFamily="{StaticResource SymbolFont}" 
                            Text="{StaticResource FontSymbolStatusErrorFull}"
                            Visibility="{Binding ConfigBinder.MicrophoneRecordMinDurationError.Value, Mode=OneWay}"
                            />
                        <TextBox
                            Grid.Column="3" Grid.Row="4"
                            FontSize="{DynamicResource YsrFontSize}"
                            Text="{Binding ConfigBinder.MicrophoneRecordMinDurationBinder.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            />

                        <TextBlock
                            Grid.Column="0" Grid.Row="6"
                            FontSize="{DynamicResource YsrFontSize}">
                            <Run Text="雑音判定の積極性" />
                            <Run
                                Foreground="{DynamicResource YspInfoBrush}"
                                BaselineAlignment="Bottom"
                                FontFamily="{StaticResource SymbolFont}"
                                Text="{StaticResource FontSymbolInfo}"
                                ToolTip="VADフィルタの強度を設定します。数値が大きくなるほど積極的に雑音判定します" />
                        </TextBlock>
                        <ComboBox
                            Grid.Column="3" Grid.Row="6"
                            FontSize="{DynamicResource YsrFontSize}"
                            ItemsSource="{Binding ConfigBinder.VadGoogleParamatersBinder, Mode=OneWay}"
                            SelectedIndex="{Binding ConfigBinder.VadGoogleParamaterIndex.Value, Mode=TwoWay}"
                            />

                        <TextBlock
                            Grid.Column="0" Grid.Row="8"
                            FontSize="{DynamicResource YsrFontSize}">
                            <Run Text="HPFの強さ" />
                            <Run
                                Foreground="{DynamicResource YspInfoBrush}"
                                BaselineAlignment="Bottom"
                                FontFamily="{StaticResource SymbolFont}"
                                Text="{StaticResource FontSymbolInfo}"
                                ToolTip="HPFフィルタの強度を設定します。google音声認識を使用する場合無効を推奨します" />
                        </TextBlock>
                        <ComboBox
                            Grid.Column="3" Grid.Row="8"                            
                            FontSize="{DynamicResource YsrFontSize}"
                            ItemsSource="{Binding ConfigBinder.HpfParamatersBinder, Mode=OneWay}"
                            SelectedIndex="{Binding ConfigBinder.HpfParamaterIndex.Value, Mode=TwoWay}"
                            />
                    </Grid>
                </Border>
            </TabItem>

            <TabItem Header="ゆかりねっと" Padding="16,2,16,2">
                <Border Margin="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="48" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="24" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <CheckBox
                            Grid.Column="0" Grid.ColumnSpan="4"
                            HorizontalAlignment="Left"
                            IsChecked="{Binding ConfigBinder.IsUsedYukarinetteBinding.Value, Mode=TwoWay}"
                            FontSize="{DynamicResource YsrFontSize}"
                            Content="ゆかりねっとと連携"
                            />

                        <TextBlock
                            Grid.Column="0" Grid.Row="2"
                            FontSize="{DynamicResource YsrFontSize}"
                            >
                            <Run Text="外部連携ポート" />
                        </TextBlock>
                        <TextBlock
                            Grid.Column="2" Grid.Row="2"
                            Margin="4,0,4,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource YspErrorBrush}"
                            FontSize="{DynamicResource YsrFontSize}"
                            FontFamily="{StaticResource SymbolFont}" 
                            Text="{StaticResource FontSymbolStatusErrorFull}"
                            Visibility="{Binding ConfigBinder.YukarinettePortError.Value, Mode=OneWay}"
                            />
                        <TextBox
                            Grid.Column="3" Grid.Row="2"                            
                            FontSize="{DynamicResource YsrFontSize}"
                            Text="{Binding ConfigBinder.YukarinettePortBinding.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            />

                        <CheckBox
                            Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="4"
                            HorizontalAlignment="Left"
                            IsChecked="{Binding ConfigBinder.IsUsedYukaConeBinding.Value, Mode=TwoWay}"
                            FontSize="{DynamicResource YsrFontSize}"
                            Content="ゆかコネNEOと連携"
                            />

                        <TextBlock
                            Grid.Column="0" Grid.Row="6"
                            FontSize="{DynamicResource YsrFontSize}"
                            >
                            <Run Text="外部連携ポート" />
                        </TextBlock>
                        <TextBlock
                            Grid.Column="2" Grid.Row="6"
                            Margin="4,0,4,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource YspErrorBrush}"
                            FontSize="{DynamicResource YsrFontSize}"
                            FontFamily="{StaticResource SymbolFont}" 
                            Text="{StaticResource FontSymbolStatusErrorFull}"
                            Visibility="{Binding ConfigBinder.YukaConePortError.Value, Mode=OneWay}"
                            />
                        <TextBox
                            Grid.Column="3" Grid.Row="6"                            
                            FontSize="{DynamicResource YsrFontSize}"
                            Text="{Binding ConfigBinder.YukaConePortBinding.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            />
                    </Grid>
                </Border>
            </TabItem>

            <TabItem Header="字幕" Padding="16,2,16,2">
                <Border Margin="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="48" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="24" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <CheckBox
                            Grid.Column="0" Grid.ColumnSpan="4"
                            HorizontalAlignment="Left"
                            IsChecked="{Binding ConfigBinder.IsUsedObsSubtitleBinder.Value, Mode=TwoWay}"
                            FontSize="{DynamicResource YsrFontSize}"
                            >
                            <CheckBox.Content>
                                <TextBlock
                                    FontSize="{DynamicResource YsrFontSize}"
                                    >
                                    <Run Text="OBS字幕を使用する" />
                                    <Run
                                        Foreground="{DynamicResource YspInfoBrush}"
                                        BaselineAlignment="Bottom"
                                        FontFamily="{StaticResource SymbolFont}"
                                        Text="{StaticResource FontSymbolInfo}"
                                        ToolTip="-" />
                                </TextBlock>
                            </CheckBox.Content>
                        </CheckBox>

                        <TextBlock
                            Grid.Column="0" Grid.Row="2"
                            FontSize="{DynamicResource YsrFontSize}"
                            >
                            <Run Text="字幕時間(秒)" />
                            <Run
                                Foreground="{DynamicResource YspInfoBrush}"
                                BaselineAlignment="Bottom"
                                FontFamily="{StaticResource SymbolFont}"
                                Text="{StaticResource FontSymbolInfo}"
                                ToolTip="-" />
                        </TextBlock>
                        <TextBlock
                            Grid.Column="2" Grid.Row="2"
                            Margin="4,0,4,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource YspErrorBrush}"
                            FontSize="{DynamicResource YsrFontSize}"
                            FontFamily="{StaticResource SymbolFont}" 
                            Text="{StaticResource FontSymbolStatusErrorFull}"
                            Visibility="{Binding ConfigBinder.ObsSubtitleTruncateError.Value, Mode=OneWay}"
                            />
                        <TextBox
                            Grid.Column="3" Grid.Row="2"                            
                            FontSize="{DynamicResource YsrFontSize}"
                            Text="{Binding ConfigBinder.ObsSubtitleTruncateBinder.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            />

                        <TextBlock
                            Grid.Column="0" Grid.Row="4"
                            FontSize="{DynamicResource YsrFontSize}"
                            >
                            <Run Text="日本語字幕用テキストソース" />
                            <Run
                                Foreground="{DynamicResource YspInfoBrush}"
                                BaselineAlignment="Bottom"
                                FontFamily="{StaticResource SymbolFont}"
                                Text="{StaticResource FontSymbolInfo}"
                                ToolTip="-" />                        
                        </TextBlock>
                        <TextBox
                            Grid.Column="3" Grid.Row="4"                            
                            FontSize="{DynamicResource YsrFontSize}"
                            Text="{Binding ConfigBinder.ObsSubtitleTextJpBinder.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            />

                        <TextBlock
                            Grid.Column="0" Grid.Row="6"
                            FontSize="{DynamicResource YsrFontSize}"
                            >
                            <Run Text="翻訳字幕用テキストソース" />
                            <Run
                                Foreground="{DynamicResource YspInfoBrush}"
                                BaselineAlignment="Bottom"
                                FontFamily="{StaticResource SymbolFont}"
                                Text="{StaticResource FontSymbolInfo}"
                                ToolTip="-" />                        
                        </TextBlock>
                        <TextBox
                            Grid.Column="3" Grid.Row="6"                            
                            FontSize="{DynamicResource YsrFontSize}"
                            Text="{Binding ConfigBinder.ObsSubtitleTextEnBinder.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            />

                        <TextBlock
                            Grid.Column="0" Grid.Row="8"
                            FontSize="{DynamicResource YsrFontSize}"
                            >
                            <Run Text="Webソケットポート" />
                            <Run
                                Foreground="{DynamicResource YspInfoBrush}"
                                BaselineAlignment="Bottom"
                                FontFamily="{StaticResource SymbolFont}"
                                Text="{StaticResource FontSymbolInfo}"
                                ToolTip="-" />                        
                        </TextBlock>
                        <TextBlock
                            Grid.Column="2" Grid.Row="8"
                            Margin="4,0,4,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource YspErrorBrush}"
                            FontSize="{DynamicResource YsrFontSize}"
                            FontFamily="{StaticResource SymbolFont}" 
                            Text="{StaticResource FontSymbolStatusErrorFull}"
                            Visibility="{Binding ConfigBinder.ObsSubtitlePortError.Value, Mode=OneWay}"
                            />
                        <TextBox
                            Grid.Column="3" Grid.Row="8"                            
                            FontSize="{DynamicResource YsrFontSize}"
                            Text="{Binding ConfigBinder.ObsSubtitlePortBinder.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            />

                        <TextBlock
                            Grid.Column="0" Grid.Row="10"
                            FontSize="{DynamicResource YsrFontSize}"
                            >
                            <Run Text="Webソケットパスワード" />
                            <Run
                                Foreground="{DynamicResource YspInfoBrush}"
                                BaselineAlignment="Bottom"
                                FontFamily="{StaticResource SymbolFont}"
                                Text="{StaticResource FontSymbolInfo}"
                                ToolTip="-" />                        
                        </TextBlock>
                        <TextBox
                            Grid.Column="3" Grid.Row="10"                            
                            FontSize="{DynamicResource YsrFontSize}"
                            Text="{Binding ConfigBinder.ObsSubtitlePasswordBinder.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            />

                        <CheckBox
                            Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="12"
                            HorizontalAlignment="Left"
                            IsChecked="{Binding ConfigBinder.IsUsedVrcSubtitleBinder.Value, Mode=TwoWay}"
                            >
                            <CheckBox.Content>
                                <TextBlock
                                    FontSize="{DynamicResource YsrFontSize}"
                                    >
                                    <Run Text="VRC OSC字幕を使用する" />
                                    <Run
                                        Foreground="{DynamicResource YspInfoBrush}"
                                        BaselineAlignment="Bottom"
                                        FontFamily="{StaticResource SymbolFont}"
                                        Text="{StaticResource FontSymbolInfo}"
                                        ToolTip="-" />                                
                                </TextBlock>
                            </CheckBox.Content>
                        </CheckBox>
                    </Grid>
                </Border>
            </TabItem>

            <TabItem Header="合成音声" Padding="16,2,16,2">
                <Border Margin="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="48" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="64" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="24" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <CheckBox
                            Grid.Column="0" Grid.ColumnSpan="5" Grid.Row="0"
                            HorizontalAlignment="Left"
                            FontSize="{DynamicResource YsrFontSize}"
                            Content="合成音声でおしゃべりする"
                            />

                        <TextBlock
                            Grid.Column="0" Grid.Row="2"
                            FontSize="{DynamicResource YsrFontSize}"
                            Text="連携ボイロ"
                            />
                        <ComboBox
                            Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="2"
                            FontSize="{DynamicResource YsrFontSize}"
                            SelectedIndex="0">
                            <ComboBoxItem>VOICEROID2</ComboBoxItem>
                        </ComboBox>

                        <TextBlock
                            Grid.Column="0" Grid.Row="4"
                            FontSize="{DynamicResource YsrFontSize}"
                            Text="合成音声パス"
                            />
                        <TextBox
                            Grid.Column="3" Grid.Row="4"
                            FontSize="{DynamicResource YsrFontSize}"
                            Text="{Binding ConfigBinder.IlluminateClientBinding.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            />
                        <Button
                            Grid.Column="4" Grid.Row="4"
                            FontSize="{DynamicResource YsrFontSize}"
                            Content="選択"
                            >
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <l:OpenFileDialogInteractionMessageAction>
                                        <l:DirectInteractionMessage CallbackCommand="{Binding IlluminateClientClickCommand}">
                                            <l:OpeningFileSelectionMessage Filter="すべてのファイル(*.*)|*.*" Title="合成音声を選択" MultiSelect="False"/>
                                        </l:DirectInteractionMessage>
                                    </l:OpenFileDialogInteractionMessageAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </Grid>
                </Border>
            </TabItem>

            <TabItem Header="フィルタ"  Padding="16,2,16,2">
                <TabItem.Resources>
                    <local:FilterTemplateSelector
                        x:Key="TemplateSelectorKey"
                        SummaryDataTemplate="SummaryTemplateKey"
                        FilterDataTemplate="FilterTemplateKey"
                        />
                    <DataTemplate  x:Key="SummaryTemplateKey">
                        <Border>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="36" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    FontSize="{DynamicResource YsrFontSize}"
                                    Text="ここにフィルタの説明を書く"
                                    />

                                <TextBlock
                                    Grid.Row="1"
                                    VerticalAlignment="Center"
                                    FontSize="{DynamicResource YsrFontSize}"
                                    Text="←ボタンをクリックしてフィルタを追加"
                                    />
                            </Grid>
                        </Border>
                    </DataTemplate>

                    <DataTemplate x:Key="FilterTemplateKey">
                        <Border>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="48" />
                                    <RowDefinition Height="4" />
                                    <RowDefinition Height="36" />
                                    <RowDefinition Height="4" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <StackPanel>
                                    <TextBlock
                                        FontSize="{DynamicResource YsrFontSize}"
                                        Text="フィルタ名"
                                        />
                                    <TextBox
                                        FontSize="{DynamicResource YsrFontSize}"
                                         Text="{Binding SelectedItem.Name.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ElementName=filter_listbox}"
                                        />
                                </StackPanel>

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="92" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="92" />
                                        <ColumnDefinition Width="4" />
                                        <ColumnDefinition Width="92" />
                                    </Grid.ColumnDefinitions>
                                    <Button>
                                        <Button.Content>
                                            <TextBlock
                                                FontSize="{DynamicResource YsrFontSize}"
                                                >
                                                <Run FontFamily="{StaticResource SymbolFont}" Text="{StaticResource FontSymbolPage}" />
                                                <Run Text="ルール追加"/>
                                            </TextBlock>
                                        </Button.Content>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <ri:EventToReactiveCommand Command="{Binding DataContext.RuleAddClickCommand, Mode=OneWay, ElementName=root}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>

                                    <!--
                                    <Button Grid.Column="2">
                                        <Button.Content>
                                            <TextBlock
                                                FontSize="{DynamicResource YsrFontSize}"
                                                >
                                                <Run Text="__(仮配置)保存__" />
                                            </TextBlock>
                                        </Button.Content>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <ri:EventToReactiveCommand Command="{Binding DataContext.___SaveCommand, Mode=OneWay, ElementName=root}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>
                                    -->
                                    <Button Grid.Column="4" IsEnabled="False">
                                        <Button.Content>
                                            <TextBlock
                                                FontSize="{DynamicResource YsrFontSize}"
                                                >
                                                <Run FontFamily="{StaticResource SymbolFont}" Text="{StaticResource FontSymbolSave}" />
                                                <Run Text="バックアップ" />
                                            </TextBlock>
                                        </Button.Content>

                                    </Button>
                                </Grid>

                                <ListBox
                                    Grid.Row="4"
                                    FontSize="{DynamicResource YsrFontSize}"
                                    ItemsSource="{Binding Rules, Mode=OneWay}"
                                    HorizontalContentAlignment="Stretch">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="32" />
                                                        <ColumnDefinition Width="32" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="32" />
                                                    </Grid.RowDefinitions>
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                        <TextBlock Text="ルール：" />
                                                        <TextBlock Text="{Binding Rule.Value, Mode=OneWay}" />
                                                        <TextBlock Text="/" />

                                                        <TextBlock Text="アクション：" />
                                                        <TextBlock Text="{Binding Action.Value, Mode=OneWay}" />
                                                        <TextBlock Text="/" />

                                                        <TextBlock Text="入力文字列：&quot;" />
                                                        <TextBlock Text="{Binding Src.Value, Mode=OneWay}" />
                                                        <TextBlock Text="&quot;/" />

                                                        <TextBlock Text="変換文字列：&quot;" />
                                                        <TextBlock Text="{Binding Dst.Value, Mode=OneWay}" />
                                                        <TextBlock Text="&quot;" />
                                                    </StackPanel>
                                                    <Button Grid.Column="1">
                                                        <Button.Content>
                                                            <TextBlock
                                                                FontFamily="{StaticResource SymbolFont}"
                                                                FontSize="{DynamicResource YsrFontSize}"
                                                                Text="{StaticResource FontSymbolEdit}" />
                                                        </Button.Content>
                                                        <i:Interaction.Triggers>
                                                            <i:EventTrigger EventName="Click">
                                                                <ri:EventToReactiveCommand Command="{Binding DataContext.RuleEditClickCommand, Mode=OneWay, ElementName=root}" />
                                                            </i:EventTrigger>
                                                        </i:Interaction.Triggers>
                                                    </Button>
                                                    <Button Grid.Column="2">
                                                        <Button.Content>
                                                            <TextBlock
                                                                FontFamily="{StaticResource SymbolFont}"
                                                                FontSize="{DynamicResource YsrFontSize}"
                                                                Text="{StaticResource FontSymbolDelete}" />
                                                        </Button.Content>
                                                        <i:Interaction.Triggers>
                                                            <i:EventTrigger EventName="Click">
                                                                <ri:EventToReactiveCommand Command="{Binding DataContext.RuleRemoveClickCommand, Mode=OneWay, ElementName=root}" />
                                                            </i:EventTrigger>
                                                        </i:Interaction.Triggers>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </TabItem.Resources>
                
                <Border Padding="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="36" />
                        </Grid.RowDefinitions>

                        <ListBox
                            x:Name="filter_listbox"
                            Grid.Column="0" Grid.Row="0"
                            SelectionMode="Single"
                            HorizontalContentAlignment="Stretch"
                            ItemsSource="{Binding Filter.Value.Filters, Mode=OneWay}"
                            SelectedItem="{Binding SelectedFilterItem.Value, Mode=TwoWay}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="0,4,0,4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="24" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="4" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                Grid.Column="0" Grid.Row="0"
                                                MaxWidth="120"
                                                FontSize="{DynamicResource YsrFontSize}"
                                                >
                                                <Run FontFamily="{StaticResource SymbolFont}" Text="{StaticResource FontSymbolFilter}" />
                                                <Run Text="{Binding Name.Value, Mode=OneWay}" />
                                            </TextBlock>
                                            <CheckBox
                                                Grid.Column="0" Grid.Row="2"
                                                HorizontalAlignment="Left"
                                                IsChecked="{Binding Enable.Value, Mode=TwoWay}"
                                                FontSize="{DynamicResource YsrFontSize}"
                                                Content="有効"
                                                />
                                            <Button
                                                Grid.Column="1"
                                                Grid.Row="0" Grid.RowSpan="3"
                                                Width="24" Height="24"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top">
                                                <Button.Content>
                                                    <TextBlock
                                                        FontFamily="{StaticResource SymbolFont}"
                                                        FontSize="{DynamicResource YsrFontSize}"
                                                        Text="{StaticResource FontSymbolDelete}" />
                                                </Button.Content>
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="Click">
                                                        <ri:EventToReactiveCommand Command="{Binding DataContext.FilterRemoveClickCommand, Mode=OneWay, ElementName=root}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Grid.Column="0" Grid.Row="1">
                            <Button.Content>
                                <TextBlock
                                    FontSize="{DynamicResource YsrFontSize}"
                                    >
                                    <Run FontFamily="{StaticResource SymbolFont}" Text="{StaticResource FontSymbolFilter}" />
                                    <Run Text="フィルタ追加"/>
                                </TextBlock>
                            </Button.Content>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <ri:EventToReactiveCommand Command="{Binding DataContext.FilterAddClickCommand, Mode=OneWay, ElementName=root}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>

                        <ContentControl
                            Grid.Column="2" Grid.Row="0" Grid.RowSpan="2"
                            Content="{Binding SelectedItem, Mode=OneWay, ElementName=filter_listbox}"
                            ContentTemplateSelector="{StaticResource TemplateSelectorKey}">
                            <ContentControl.Resources>

                            </ContentControl.Resources>
                        </ContentControl>
                    </Grid>
                </Border>
            </TabItem>

            <TabItem Header="高度な設定" Padding="16,2,16,2">
                <Border >
                    <WindowsFormsHost Grid.Row="1">
                        <wf:PropertyGrid x:Name="propertyGrid" />
                    </WindowsFormsHost>
                </Border>
            </TabItem>
        </TabControl>
        <Button
            Grid.Row="2"
            Width="92" Height="45"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="5"
            FontSize="{DynamicResource YsrFontSize}"
            Content="起動"
            Command="{Binding ExecCommand}"
            />

    </Grid>
</Window>
